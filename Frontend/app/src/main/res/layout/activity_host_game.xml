<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Lambent"
    tools:context=".HostGame">

    <TextView
        android:id="@+id/host_label"
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="@string/host_lobby"
        android:textAlignment="center"
        android:textColor="@color/GREY"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/host_btnESC"
        android:layout_width="170dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:background="@color/PASTEL_ORANGE"
        android:text="@string/esc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_textview2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/host_btnHost"
        android:layout_width="176dp"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/ROYAL_BLUE_LIGHT"
        android:text="@string/host_lobby"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_textNumber" />

    <EditText
        android:id="@+id/host_lobbyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="lobby name"
        android:textAlignment="center"
        android:textColor="@color/GREY"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_enterLobbyNameLabel" />

    <TextView
        android:id="@+id/host_enterLobbyNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Enter Lobby Name:"
        android:textColor="@color/GREY"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_label" />

    <Switch
        android:id="@+id/host_switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Science"
        app:layout_constraintStart_toEndOf="@+id/host_switch1"
        app:layout_constraintTop_toBottomOf="@+id/host_themeLabel" />

    <TextView
        android:id="@+id/host_customTriviaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Custom Trivia"
        android:textColor="@color/GREY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_textview" />

    <EditText
        android:id="@+id/host_textNumber"
        android:layout_width="162dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/GREY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_numOfRoundsLabel" />

    <Switch
        android:id="@+id/host_switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:text="Pop Culture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toEndOf="@+id/host_switch2"
        app:layout_constraintTop_toBottomOf="@+id/host_themeLabel" />

    <Switch
        android:id="@+id/host_switch5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="ISU"
        app:layout_constraintStart_toEndOf="@+id/host_switch4"
        app:layout_constraintTop_toBottomOf="@+id/host_switch2" />

    <Switch
        android:id="@+id/host_switch6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Computers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toEndOf="@+id/host_switch5"
        app:layout_constraintTop_toBottomOf="@+id/host_switch3" />

    <TextView
        android:id="@+id/host_numOfRoundsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/number_of_rounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_switch4" />

    <TextView
        android:id="@+id/host_themeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Themes:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_customTriviaLabel" />

    <Switch
        android:id="@+id/host_switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Geography"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_switch1" />

    <Switch
        android:id="@+id/host_switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:text="History"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_themeLabel" />

    <Button
        android:id="@+id/host_btnRandom"
        android:layout_width="164dp"
        android:layout_height="114dp"
        android:layout_marginTop="20dp"
        android:background="@color/CURIOUS_PURPLE"
        android:text="Fully Random"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/host_btnHost"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_textNumber" />

    <TextView
        android:id="@+id/host_textview2"
        android:layout_width="164dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Includes random theme and number of rounds, starts trivia"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_btnRandom" />

    <TextView
        android:id="@+id/host_textview3"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Create trivia with a select theme and number of rounds"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/host_textview2"
        app:layout_constraintTop_toBottomOf="@+id/host_btnHost" />

    <TextView
        android:id="@+id/host_textview"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="username taken/ debugging screen"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/host_lobbyName" />

</androidx.constraintlayout.widget.ConstraintLayout>